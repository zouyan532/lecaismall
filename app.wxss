/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.swiper {
  width: 100%;
  position: relative;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.swiper .title{
	position: absolute;
	top: 280rpx;
	left: 20rpx;
	font-size: 36rpx;
	color: #fff;
}
.slide-nav {
  width: 100%;
  height: 100%;
}
.tips {
  font-size: 28rpx;
  text-align: center;
  padding: 50rpx;
  color: #ccc;
}