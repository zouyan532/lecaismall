/* pages/commitorder/index.wxss */

.container_commit {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: white;
  overflow: scroll;
}

.view_select {
  display: flex;
  flex-direction: column;
  widows: 100%;
  height: 120rpx;
  justify-content: flex-start;
  border: 1rpx solid #f9f9f9;
}

.normaltext {
  font-size: 28rpx;
}

.view_select_view {
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.icon {
  width: 30rpx;
  height: 30rpx;
}

.small_yellow_text {
  font-size: 22rpx;
  color: #ff9600;
  margin-left: 20rpx;
}

.more {
  height: 30rpx;
  width: 20rpx;
  position: absolute;
  right: 20rpx;
  margin-top: 40rpx;
}

.item_goods_view {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  border: 1rpx solid #f9f9f9;
}

.item_goods_img {
  width: 140rpx;
  height: 140rpx;
}

.item_goods_view_view {
  justify-content: space-between;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  height: 140rpx;
}

.item_goods_amount {
  margin-right: 20rpx;
  margin-top: 50rpx;
  font-size: 24rpx;
  position: absolute;
  right: 20rpx;
}

.text_small {
  font-size: 24rpx;
}

.view_me_line {
  height: 80rpx;
  border: 1rpx solid #f9f9f9;
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-items: center;
}

.view_total {
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  border-bottom: 10rpx solid #f9f9f9;
}

.bottom_view {
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row-reverse;
  background-color: white;
  align-items: center;
}

.btn_commit {
  color: white;
  width: 140rpx;
  height: 80rpx;
  background-color: #f83342;
  font-size: 30rpx;
  text-align: center;
  line-height: 40px; /*垂直居中*/
}

.img_payway {
  height: 100rpx;
  width: 100rpx;
}

.icon_payway {
  position: absolute;
  right: 20rpx;
}
