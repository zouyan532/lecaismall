/* pages/allorder/index.wxss */

.container_allorder {
  display: flex;
  flex-direction: column;
  overflow: scroll;
  width: 100%;
  position: absolute;
}

.item_orders_view {
  display: flex;
  flex-direction: column;
  width: 100%;
  border-bottom: 20rpx solid #f9f9f9;
}

.item_order_view_top {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #f9f9f9;
  align-items: center;
}

.text28 {
  font-size: 28rpx;
}

.text26 {
  font-size: 26rpx;
}

.text24 {
  font-size: 24rpx;
}

.item_text_state {
  font-size: 28rpx;
  display: flex;
  position: absolute;
  right: 20rpx;
}

.view_item_good {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 160rpx;
  background-color: white;
  margin-top: 10rpx;
  border-bottom: 1rpx solid #f9f9f9;
}

.item_good_icon {
  width: 130rpx;
  height: 130rpx;
  margin-left: 24rpx;
  padding: 6rpx;
}

.ietm_view_good_text {
  height: 110rpx;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item_view_buttons {
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  height: 80rpx;
}

.item_good_btn {
  height: 50rpx;
  width: 130rpx;
  border: 1rpx solid #a5a5a5;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 20rpx;
  margin-right:30rpx
}
