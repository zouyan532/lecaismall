.all_container {
  height: 100%;
  position: absolute;
  background-color: #f9f9f9;
  overflow:scroll;
  white-space:nowrap;
}

.swiper-tab {
  bottom: 0;
  position: fixed;
  display: flex;
  flex-direction: row;
  width: 100%;
  background-color: white;
  height: 100rpx;
}

.swiper-tab-list {
  display: flex;
  width: 50%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.text_tab {
  font-size: 30rpx;
  color: #666;
}

.on {
  color: #f83342;
  /* border-bottom: 5rpx solid#da7c0c; */
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  top: 0;
  position: fixed;
}

.swiper-box view {
  text-align: center;
}

.icon {
  width: 30rpx;
  height: 30rpx;
}

.snack_container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #f9f9f9;
  justify-content: center;
  align-items: center;
}

.item_rec_container {
  width: 95%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 20rpx;
  flex-direction: row;
  display: flex;
}

.item_rec_img {
  height: 200rpx;
  display: inline-block;
  width: 100%;
}

.item_rec_img_state {
  height: 80rpx;
  width: 80rpx;
  margin-top: 20rpx;
  position: absolute;
  right: 20rpx;
  display: flex;
}

.view_divider_container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 20rpx;
  align-items: center;
}

.divider_icon {
  width: 40rpx;
  height: 40rpx;
}

.container {
  display: flex;
  flex-direction: column;
}

.divider_text {
  font-size: 25rpx;
  margin-left: 10rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.hot_container {
  width: 95%;
  flex-direction: row;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  padding-bottom: 200rpx;
}

.hot_item_container {
  width: 47%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: white;
  margin-top: 20rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  padding-bottom: 10rpx;
}

.hot_item_img {
  width: 100%;
}

.hot_item_view_text {
  display: flex;
  flex-direction: row;
  width: 80%;
  justify-content: space-between;
  align-items: center;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.btn_addtocart {
  font-size: 20rpx;
}
.tips {
  font-size: 28rpx;
  text-align: center;
  padding: 50rpx;
  color: #ccc;
}